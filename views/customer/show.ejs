                radial-gradient(circle, #e87da7 20%, transparent 20%),
                radial-gradient(circle, #e87da7 20%, transparent 20%),
                radial-gradient(circle, #e87da7 20%, transparent 20%),
                radial-gradient(circle, #e87da7 20%, transparent 20%);
            background-size: 15% 15%, 20% 20%, 18% 18%, 20% 20%, 15% 15%, 20% 20%, 18% 18%;
            background-position: 50% 0%;
            animation: greenbottomBubbles 0.6s ease;
        }

        @keyframes greenbottomBubbles {
