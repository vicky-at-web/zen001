<% layout('../layout/boilerplate')%>
<br><br>
    <h1>customer Register form</h1>
    <br>
    
    <div class="row">
        <div class="col-md-6 col-sm-9 offset-md-3">
            <form action="/customer/auth/register" method="post" class="mb-3 formvalid" novalidate>
                <div class="form-floating">
                    
                    <input class="form-control" required autocomplete="off" type="text" id="location"
                        name="customer[username]" placeholder="jjj" required>
                        <label for="location">Username </label>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please give a usename!
                    </div>
                </div>
                <br>
                <div class="form-floating">
                    
                    <input class="form-control" required autocomplete="off" type="text" id="title" name="customer[email]" placeholder="jjj">
                    <label  for="email">Email </label>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please give your email!
                    </div>
                </div>
                <br>
                <div class="form-floating">
                    
                    <input class="form-control" required autocomplete="off" type="password" id="location" placeholder="jjj"
                        name="customer[password]" required>
                        <label  for="location">Password </label>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please give a password!
                    </div>
                </div>
                <br>
                
            
               
                <button class="btn btn-success">Register</button>
                
            </form>
        </div>
    </div>

  